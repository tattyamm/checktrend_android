<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:gravity="center_horizontal">
            <!-- select buttons -->
            <Button
                android:id="@+id/selectButton01"
                android:layout_width ="fill_parent"
                android:layout_height="fill_parent"
                android:text="Google"
                android:textSize="15sp"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/selectButton02"
                android:layout_width ="fill_parent"
                android:layout_height="fill_parent"
                android:text="Yahoo"
                android:textSize="15sp"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/selectButton03"
                android:layout_width ="fill_parent"
                android:layout_height="fill_parent"
                android:text="Twitter"
                android:textSize="15sp"
                android:layout_weight="1">
            </Button>
            <Button
                android:id="@+id/selectButton04"
                android:layout_width ="fill_parent"
                android:layout_height="fill_parent"
                android:text="Amazon"
                android:textSize="15sp"
                android:layout_weight="1">
            </Button>
        </LinearLayout>


        <!-- タイトル -->
        <TextView android:id="@+id/textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selectButton01"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="1dip"
            android:layout_marginTop="0.1dip"
            android:layout_marginRight="1dip"
            android:layout_marginBottom="0.7dip"
        />


        <!-- リスト -->

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ListView android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
